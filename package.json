    "@types/inquirer": "^9.0.9",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "domhandler": "^5.0.3",
    "fs-extra": "^11.2.0",
    "htmlparser2": "^9.1.0",
    "inquirer": "^13.2.1",
    "postcss": "^8.4.32"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
